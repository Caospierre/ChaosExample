{
  "name": "chaos-example",
  "version": "1.0.0",
  "description": "chaos-example",
  "main": "handler.js",
  "nyc": {
    "exclude": [
      "src/adapter/*",
      "src/enums/*",
      "src/constants/*",
      "src/architecture/*",
      "src/schema/*",
      "src/handlers/*",
      "src/interfaces",
      "src/models",
      "tests/**/*.spec.ts",
      "tests/**/*.ts"
    ],
    "check-coverage": true,
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "scripts": {
    "depcheck": "depcheck . --ignores=\"constants,handlers,repository,eslint,prettier,interfaces,controller,schema,models,adapter,glob,tests,lint-staged,ts-mockery,reflect-metadata,inversify,depcheck,eslint-plugin-import,@middy/core,@middy/validator,@types/source-map-support,@typescript-eslint/eslint-plugin,aws-lambda,@typescript-eslint/parser,@types/source-map-suppor,eslint-config-prettier,eslint-plugin-prettier,sinon-chai,eslint-plugin-simple-import-sort,chai,sinon,@middy/http-response-serializer,@middy/http-json-body-parser,@middy/http-error-handler,@types/sinon-chai,@types/aws-lambda,@stylistic/eslint-plugin,json-schema-to-typescript\"",
    "prepare": "husky",
    "test": "npm run test:unit && npm run test:coverage",
    "test:unit": "npx mocha tests/**/*.spec.ts",
    "test:coverage": "npx nyc mocha -config ./.mocharc.nyc.yml \"tests/**/*.spec.ts\"",
    "compile": "node esbuild.config.js",
    "remove:dist": "rm -rf resources/dist",
    "remove:zip": "rm -rf resources/lambdaZip",
    "tf:apply": "terraform apply",
    "tf:destroy": "terraform destroy && npm run remove:dist && npm run remove:zip",
    "deploy": "npm run compile && npm run tf:apply && npm run remove:zip",
    "validate": "npm list && npm run depcheck && npm run test",
    "generate:types": "rm -rf \"src/models/\" && npx json-schema-to-typescript -o \"src/models/\" \"src/schema/*.json\""
  },
  "author": "ChaosPierre",
  "license": "ISC",
  "devDependencies": {
    "@stylistic/eslint-plugin": "2.11.0",
    "@types/aws-lambda": "8.10.146",
    "@types/chai": "4.3.16",
    "@types/mocha": "10.0.10",
    "@types/node": "22.10.1",
    "@types/sinon": "17.0.3",
    "@types/sinon-chai": "3.2.12",
    "@types/source-map-support": "0.5.10",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "depcheck": "1.4.7",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "json-schema-to-typescript": "15.0.4",
    "lint-staged": "15.2.11",
    "mocha": "11.1.0",
    "npm": "10.9.2",
    "nyc": "17.1.0",
    "prettier": "3.4.2",
    "sinon-chai": "3.7.0",
    "source-map-support": "0.5.21",
    "ts-json-schema-generator": "^2.4.0",
    "ts-mockery": "1.2.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@middy/core": "6.0.0",
    "@middy/http-error-handler": "6.0.0",
    "@middy/http-json-body-parser": "6.0.0",
    "@middy/http-response-serializer": "6.0.0",
    "@middy/validator": "6.3.2",
    "@types/lodash": "^4.17.20",
    "aws-lambda": "1.0.7",
    "axios": "1.10.0",
    "esbuild": "0.25.2",
    "inversify": "6.2.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  }
}
